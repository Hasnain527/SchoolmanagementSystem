                                        @Html.DisplayFor(modelItem => item.StudentPhone)
                                        </td>
                                        <td>
                                        @Html.DisplayFor(modelItem => item.StudentAddress)
                                        </td>
                                        <td>
                                        @Html.DisplayFor(modelItem => item.StudentGroup)
                                        </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.StudentCnic" class="btn btn-outline-primary">Edit</a> 
                                                <a asp-action="Details" asp-route-id="@item.StudentCnic" class="btn btn-outline-secondary">Details</a> 
                                                <a asp-action="Delete" asp-route-id="@item.StudentCnic" class="btn btn-outline-danger">Delete</a>
                                        </td>
                                    </tr>
                            }
                        </tbody>
                  </table>
        </div>
      </div>

    </div>
