                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.StudentSection)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.StudentPhone)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.StudentAddress)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.StudentGroup)
                                </th>
